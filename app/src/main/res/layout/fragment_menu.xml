<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Menu">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="start|center"
        android:paddingHorizontal="16dp"
        android:background="@drawable/sh_bg_header_police_blue"
        android:text="MenÃº"
        android:textColor="@color/flesh"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SearchView
        android:id="@+id/svBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="-24dp"
        android:background="@drawable/sh_bg_btn_bright_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader" />

    <ImageView
        android:id="@+id/ivBuscar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/sh_bg_circle_carmine_pink"
        android:padding="12dp"
        android:contentDescription="@string/content_description"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_buscar"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/svBuscar"
        app:layout_constraintEnd_toEndOf="@id/svBuscar" />

    <TextView
        android:id="@+id/tvCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Categorias"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svBuscar" />

    <HorizontalScrollView
        android:id="@+id/hsvCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvCategorias"
        app:layout_constraintStart_toStartOf="parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="108dp"
                android:layout_height="48dp"
                android:background="@drawable/sh_bg_btn_carmine_pink"
                android:clickable="true"
                android:focusable="true"
                android:text="Hot drinks" />
        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/hsvCategorias"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>